<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="io.github.masterj3y.mymovie.dialog.action.ActionBottomSheetDialogItem" />

    </data>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextClickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBottomSheetDialogItemDark"
        android:bindDrawableStart="@{item.icon}"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@{item.text}"
        tools:drawableStart="@drawable/ic_list_ul"
        tools:text="item" />
</layout>